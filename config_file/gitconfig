[merge]
    tool = code
    ff = true
[diff]
    tool = code
[delta]
    navigate = true
    line-numbers = true
[mergetool]
    keepBackup = false
[difftool]
    prompt = false
[pull]
    rebase = false
    ff = false
[alias]
    a = add
    c = commit
    m = merge
    co = checkout
[init]
    defaultBranch = main
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
