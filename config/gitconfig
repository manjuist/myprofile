[user]
    name = dewei.ma
    email = xnmageis@outlook.com
    signingkey = xnmageis@outlook.com

[core]
    editor = nvim
    excludesfile = /Users/mdvis/.gitignore_global

[commit]
    template = ~/.gitmessages
    gpgsign = false

[merge]
    tool = diffmerge
    ff = true

[diff]
    tool = diffmerge

[mergetool]
    keepBackup = false

[difftool]
    prompt = false

[pull]
    rebase = false
    ff = false

[difftool "diffmerge"]
    cmd = /usr/local/bin/diffmerge \"$LOCAL\" \"$REMOTE\"

[mergetool "diffmerge"]
    cmd = /usr/local/bin/diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
    trustExitCode = true

[alias]
    a = add
    aa = add -A
    ap = add -p
    b = branch
    ba = branch -a
    c = commit
    ca = commit -a
    cl = clone
    co = checkout
    cp = commit -p
    d = diff
    dt = difftool
    fo = fetch origin
    l = pull
    m = merge
    mt = mergetool
    p = push
    pf = push --force
    rh = reset --hard HEAD
    ri = rebase -i
    s = status --short
    sl = stash list
    sp = stash pop
    ss = stash save
    wa = worktree add
    wab = worktree add -b
    wd = worktree remove
    wl = worktree list
    lg=log \
        --date=format:\"%m/%d-%H:%M\" \
        --pretty=\"%C(yellow)%h %<(12,trunc)%C(red)%ad %<(12,trunc)%C(blue)%cn %C(reset)%s\"
