# Proxy
#
alias unsp='unset \
           all_proxy \
           ALL_PROXY \
           http_proxy \
           HTTP_PROXY \
           https_proxy \
           HTTPS_PROXY \
           '

alias sp=' \
         export all_proxy=socks5://127.0.0.1:58591 \
         export ALL_PROXY=socks5://127.0.0.1:58591 \
         export http_proxy=socks5://127.0.0.1:58591 \
         export HTTP_PROXY=socks5://127.0.0.1:58591 \
         export https_proxy=socks5://127.0.0.1:58591 \
         export HTTPS_PROXY=socks5://127.0.0.1:58591 \
         '

# Tmux
alias tka='tmux kill-session -a'

# FZF
alias cdf='cd $(find * -type d | fzf)'
alias vif='vim $(fzf)'
