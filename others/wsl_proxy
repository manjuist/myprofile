# Proxy {
    alias unsp='unset \
               ALL_PROXY \
               http_proxy \
               https_proxy \
               '

    PROXY_SOCKET_PORT=1080

    name_server=$(cat /etc/resolv.conf | grep nameserver | cut -d' ' -f2)

    PROXY_SOCKET_ADDRESS="socks5://${name_server}"
    PROXY_HTTP_ADDRESS="socks5://${name_server}"

    PROXY_SOCKET="${PROXY_SOCKET_ADDRESS}:${PROXY_SOCKET_PORT}"
    PROXY_HTTP="${PROXY_SOCKET_ADDRESS}:${PROXY_SOCKET_PORT}"

    alias sp="export ALL_PROXY=${PROXY_SOCKET}; export http_proxy=${PROXY_HTTP}; export https_proxy=${PROXY_HTTP}"

    export DISPLAY="${name_server}:0.0"

    export WAYLAND_DISPLAY=$DISPLAY
# }
